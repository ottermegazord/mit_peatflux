\newcommand{\chapteremph}{}
\def\@makechapterhead#1{%
  \vspace*{-60\p@}%
  {\noindent\hspace{-0.7em} \raggedright \normalfont\huge\chapteremph
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \thechapter\hspace{0.3em} %
      \fi
    \fi
    \interlinepenalty\@M
    \renewcommand{\baselinestretch}{1.0}\huge%
    \hspace{0.5em}\parbox[t]{0.9\linewidth}{\raggedright\hspace{-0.7em} #1}\hfil
    \par\nobreak
    \vskip 24\p@
    \renewcommand{\baselinestretch}{\linesep}\normalsize
  }}
\def\@makeschapterhead#1{%
 \vspace*{-60\p@}%
 {\noindent \hspace{-0.4em} \raggedright \normalfont\huge\chapteremph
   \interlinepenalty\@M
   #1\par\nobreak
   \vskip 24\p@
 }}

